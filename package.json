{
  "name": "o_web_server",
  "version": "2.0.0",
  "description": "A mini project for OLAN web using Express Node.js server.",
  "main": "app.js",
  "scripts": {
    "start": "nodemon src/server/app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:player": "sass --watch --no-source-map src/clients/player/scss/import.scss src/clients/player/css/style.css",
    "watch:admin": "sass --watch --no-source-map src/clients/admin/scss/import.scss src/clients/admin/css/style.css",
    "watch:viewer": "sass --watch --no-source-map src/clients/viewer/scss/import.scss src/clients/viewer/css/style.css",
    "watch:mc": "sass --watch --no-source-map src/clients/mc/scss/import.scss src/clients/mc/css/style.css",
    "watch:live": "sass --watch --no-source-map src/clients/live/scss/import.scss src/clients/live/css/style.css",
    "watch:database": "sass --watch --no-source-map src/clients/database/scss/import.scss src/clients/database/css/style.css",
    "watch:all": "npm-run-all --parallel watch:player watch:admin watch:viewer watch:mc watch:live watch:database"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "copy-paste": "^1.5.3",
    "express": "^4.21.1",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^3.1.7",
    "socket.io": "^4.8.0",
    "xlsx-populate": "^1.21.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "sass": "^1.79.3"
  }
}
